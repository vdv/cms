- model_class = Page.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:parent_id)
      %th= model_class.human_attribute_name(:lft)
      %th= model_class.human_attribute_name(:rgt)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to page.id, cms_pages_admin_page_path(page)
        %td= page.title
        %td= page.url
        %td= page.body
        %td= page.parent_id
        %td= page.lft
        %td= page.rgt
        %td= page.active
        %td=l page.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_cms_pages_admin_page_path(page), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), cms_pages_admin_page_path(page), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_cms_pages_admin_page_path, :class => 'btn btn-primary'
