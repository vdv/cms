- model_class = @page.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @page.title
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @page.url
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @page.body
%p
  %strong= model_class.human_attribute_name(:parent_id) + ':'
  %br
  = @page.parent_id
%p
  %strong= model_class.human_attribute_name(:lft) + ':'
  %br
  = @page.lft
%p
  %strong= model_class.human_attribute_name(:rgt) + ':'
  %br
  = @page.rgt
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @page.active

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cms_pages_admin_pages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cms_pages_admin_page_path(@page), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cms_pages_admin_page_path(@page), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
