= form_for @page, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field'
  .control-group
    = f.label :body, :class => 'control-label'
    .controls
      = f.text_area :body, :class => 'text_area'
  .control-group
    = f.label :parent_id, :class => 'control-label'
    .controls
      = f.number_field :parent_id, :class => 'number_field'
  .control-group
    = f.label :lft, :class => 'control-label'
    .controls
      = f.number_field :lft, :class => 'number_field'
  .control-group
    = f.label :rgt, :class => 'control-label'
    .controls
      = f.number_field :rgt, :class => 'number_field'
  .control-group
    = f.label :active, :class => 'control-label'
    .controls
      = f.check_box :active, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), cms_pages_admin_pages_path, :class => 'btn'
