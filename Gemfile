  gem 'uglifier', '>= 1.0.3'
end

group :test do
  gem 'rspec'
  gem 'rspec-rails'
end

group :development do
  gem 'capistrano'
  gem 'thin'
end

group :production do
  gem 'unicorn'
end


gem 'haml'
gem 'haml-rails'
gem 'jquery-rails'

